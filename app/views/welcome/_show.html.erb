<% if @artist %>	
		<%= link_to artist_path(@artist.first.name) do %> 
			<div class="column-12">
			<% if !@artist.first.images.empty? %>
				<%= image_tag @artist.first.images.first['url'] %>
			<% else %> 
			<%= "hej" %>
			<% end %>
			</div>
			<div class="column-12 right">
				<h1> <%= @artist.first.name %> </h1>
			</div>
		<% end %>
	
	<div class="clearfix"></div>

	<div class="similar-list">
	<h2> ..or did you mean? </h2>
	<% @artist.each_with_index do |a, index| %> 
      <% if index != 0 %>
        <%= link_to artist_path(a.name) do %> 
			
			<h3> <%= a.name %> </h3>

			<% end %> 
		<% end %> 

      <% end %> 
      </div>


 

<% end %>