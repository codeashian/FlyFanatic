<div class="wrapper favorite-page">
<div class="favorite-menu">
<ul>
	<!-- <a href="<%= edit_favorite_path %>"><li><i class="icon ion-compose"></i></li></a> -->

	<iframe src="https://embed.spotify.com/?uri=spotify:artist:<%= @favorite.spotify_id %>" width="450" height="80" frameborder="0" allowtransparency="true"></iframe>

</ul>

</div>

	<div class="artist-header">		
		<div class="column-12 title-box">
				<h1> <%= @favorite.name %> </h1>

		</div>		
				<div class="column-12 head-image" style="background-image: url(<%= @favorite.image %>">
				</div>
	</div>


			<% if @favorite.instagram_id != "" %>
						<!-- Show instagram images -->
				<div class="column-12 insta-box">
				<iframe src="http://widget.websta.me/in/<%= @favorite.instagram_id %>/?s=225&w=3&h=3&b=0&bg=000000&p=0" allowtransparency="true" frameborder="0" scrolling="no" style="border:none;overflow:hidden;width:100%; height: 670px" ></iframe> 


			<% end %>
		</div>
		<div class="column-12 twitter-box">
			<% if @favorite.twitter_user != "" %>
				<!-- show tweets -->
				<div class="inside-box">
					<h2 class="box-header">Latest tweets</h2>

					<% @tweets_result.each do |tweet| %>					
						<div class="tweet">
							<a href="<%= tweet.user.url %>"><h3> <%= tweet.user.name %> </h3></a>
							 <a href="<%= tweet.url %>"><p> <%= tweet.text %> </p></a>
							 <pre>created: <%= tweet.created_at %></pre>
						</div>			 
					<% end %>
				<% end %>
			</div>
		</div>
	</div>

			<div class="column-12 tour-box">
				<div class="inside-box">
						<h2 class="box-header">Upcoming tour dates </h2>
						<% if @events.empty? %>
							<p> Not on tour </p>
						<% else %> 
							<% @events.each do |event| %>
								<div class="tweet">
									 <p><%= event['title'] + " " + event['formatted_datetime'] %></p>
								</div>
							<% end %>	
						<% end %>	
				</div>
			</div>

			<div class="column-12 news">
				<div class="inside-box">
					<h2 class="box-header"> News </h2>	
					<% if @news_search %>
						<% @news_search.each do |news| %>
							<div class="tweet">
								 <h3><%= news.title %> </h3>
								 <pre> <%= news.date %> </pre>
								 <a href="<%= news.url %>"><p> <%= news.description %></p></a> 
							</div>				
						<% end %>
					<% else %>
						 <p> You can add news in the edit section </p>
					<% end %>

				</div>

<!-- -->


			</div>

		</div>
	</div>

</div>
	
	





